doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Protein Search
  body
    h1 Protein Search
    form(action="/search", method="post")
      label(for="proteinName") Enter Protein Name:
      input(type="text", name="proteinName", id="proteinName", required)
      button(type="submit") Search
    if sequence
      h2 Protein Sequence:
      pre= sequence
    else
      h2 No Sequence Found